@model _19T1021205.DomainModels.Supplier
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Supplier/Save" method="post">
            @Html.AntiForgeryToken()  @*tránh bị fake dữ liệu*@

            @*ASP.NET MVC Control*@

            @Html.HiddenFor(m => m.SupplierID)
            @*<input type="hidden" name="SupplierID" value="@Model.SupplierID">*@
            
            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.SupplierName, new { @class="form-control", @autofocus="autofocus"})
                    @Html.ValidationMessageFor(m=>m.SupplierName, "", new { @style="color:#f00"})  @*Thông báo lỗi*@
                    @*<input type="text" 
                           name="SupplierName" 
                           value="@Model.SupplierName"
                           id="SupplierName" class="form-control" autofocus="autofocus">*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên giao dịch:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ContactName, "", new { @style = "color:#f00" })  @*Thông báo lỗi*@
                    @*<input type="text" class="form-control" autofocus name="ContactName" value="@Model.ContactName">*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @style = "color:#f00" })  @*Thông báo lỗi*@
                    @*<input type="text" class="form-control" name="Address" value="@Model.Address">*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @style = "color:#f00" })  @*Thông báo lỗi*@
                    @*<input type="text" class="form-control" name="Phone" value="@Model.Phone">*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia:</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Country, "", new { @style = "color:#f00" })  @*Thông báo lỗi*@

                    @*<select class="form-control" name="Country">
            <option>-- Chọn Quốc gia --</option>
            @foreach (var item in _19T1021205.BusinessLayers.CommonDataService.ListOfCountries())
            {
                if (item.CountryName == Model.Country)
                {
                    <option value="@item.CountryName" selected>
                        @item.CountryName
                    </option>
                }
                else
                {
                    <option value="@item.CountryName">
                        @item.CountryName
                    </option>
                }
            }
        </select>*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thành phố:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.City, "", new { @style = "color:#f00" })  @*Thông báo lỗi*@
                    @*<input type="text" class="form-control" name="City" value="@Model.City">*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mã bưu chính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PostalCode, "", new { @style = "color:#f00" })  @*Thông báo lỗi*@
                    @*<input type="text" class="form-control" name="PostalCode" value="@Model.PostalCode">*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @Html.ValidationSummary("", new { @style="color:#f00"})
                </div>

                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Lưu</button>
                        <a href="~/Supplier/" class="btn btn-warning">
                            Quay lại
                        </a>
                    </div>
                </div>
</form>
    </div>
</div>


